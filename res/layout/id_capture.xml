<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cardpay.banksaler_rocket.PluginIDCaptureActivity">

    <FrameLayout
        android:id="@+id/fl_surfaceview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/top_view"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>
        <View
            android:id="@+id/left_view"
            android:layout_below="@+id/top_view"
            android:background="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="425dp"/>
        <View
            android:id="@+id/right_view"
            android:layout_below="@+id/top_view"
            android:layout_alignParentRight="true"
            android:background="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="425dp"/>
        <org.opencv.android.JavaCameraView
            android:layout_below="@+id/top_view"
    		android:layout_toRightOf="@id/left_view"
    		android:layout_toLeftOf="@id/right_view"
            android:id="@+id/v_scan"
            android:layout_width="match_parent"
            android:layout_height="425dp"/>
        <View
            android:background="@android:color/black"
            android:layout_below="@id/v_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:paddingBottom="10dp"
            android:id="@+id/rl_take"
            android:background="@android:color/black"
            android:layout_below="@id/v_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
            	android:layout_alignParentRight="true"
                android:id="@+id/btn_take_pic"
                android:layout_marginRight="50dp" 
	            android:layout_width="wrap_content"  
	            android:layout_height="wrap_content"  
	            android:layout_marginTop="10dp"  
	            android:background="@drawable/button"  
	            android:paddingBottom="8dp"  
	            android:paddingLeft="25dp"  
	            android:paddingRight="25dp"  
	            android:paddingTop="8dp"  
	            android:text="拍照"  
	            android:textColor="@android:color/white" 
	            android:textSize="18sp"
            />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
